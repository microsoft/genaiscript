{
    "name": "gptools-vscode",
    "publisher": "Microsoft",
    "displayName": "GPTools Insiders",
    "description": "Iterative, refining copilot experience designed for Visual Studio Code.",
    "version": "1.8.0",
    "icon": "icon.png",
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Other"
    ],
    "license": "MIT",
    "extensionKind": [
        "workspace"
    ],
    "extensionDependencies": [
        "github.copilot-chat"
    ],
    "activationEvents": [
        "workspaceContains:**/*.gpspec.md",
        "workspaceContains:**/*.gptool.js"
    ],
    "main": "./built/extension.js",
    "browser": "./built/extension.js",
    "repository": {
        "url": "https://github.com/microsoft/gptools",
        "directory": "packages/vscode"
    },
    "files": [
        "./built/gptools.js"
    ],
    "contributes": {
        "markdown.previewStyles": [
            "./markdown.css"
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "coarch",
                    "title": "GPTools",
                    "icon": "./icon.svg"
                }
            ]
        },
        "views": {
            "coarch": [
                {
                    "id": "coarch.prompts",
                    "name": "GPTools"
                },
                {
                    "id": "coarch.prompts.requests",
                    "name": "Runs",
                    "visibility": "collapsed"
                },
                {
                    "id": "coarch.openai.requests",
                    "name": "OpenAI Requests",
                    "visibility": "collapsed"
                }
            ]
        },
        "viewsWelcome": [
            {
                "view": "coarch.fragments",
                "contents": "Create a gpspec file (.gpspec.md) to start generating tasks and code."
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "coarch.fragment.prompt",
                    "when": "!inDebugMode"
                }
            ],
            "file/newFile": [
                {
                    "command": "coarch.newfile.gptool"
                },
                {
                    "command": "coarch.newfile.gpspec"
                }
            ],
            "commandPalette": [
                {
                    "command": "coarch.newfile.gptool",
                    "when": "false"
                },
                {
                    "command": "coarch.newfile.gpspec",
                    "when": "false"
                },
                {
                    "command": "coarch.fragment.reveal",
                    "when": "false"
                },
                {
                    "command": "coarch.prompt.unbuiltin",
                    "when": "false"
                },
                {
                    "command": "coarch.prompt.navigate",
                    "when": "false"
                },
                {
                    "command": "coarch.fragment.navigate",
                    "when": "false"
                },
                {
                    "command": "coarch.request.open",
                    "when": "false"
                },
                {
                    "command": "coarch.request.status",
                    "when": "false"
                }
            ],
            "view/title": [
                {
                    "command": "coarch.prompt.create",
                    "when": "view == coarch.prompts",
                    "group": "navigation"
                },
                {
                    "command": "coarch.openai.token.update",
                    "when": "view == coarch.prompts"
                },
                {
                    "command": "coarch.openai.token.clear",
                    "when": "view == coarch.prompts"
                }
            ],
            "view/item/context": [
                {
                    "command": "coarch.fragment.prompt",
                    "when": "view == coarch.fragments && viewItem  =~ /^fragment/",
                    "group": "inline"
                },
                {
                    "command": "coarch.prompt.fork",
                    "when": "view == coarch.prompts && viewItem  =~ /^prompt/"
                },
                {
                    "command": "coarch.prompt.unbuiltin",
                    "when": "view == coarch.prompts && viewItem  =~ /^prompt.builtin/"
                }
            ],
            "explorer/context": [
                {
                    "command": "coarch.fragment.prompt",
                    "when": "explorerViewletVisible"
                }
            ]
        },
        "configuration": [
            {
                "title": "GPTools",
                "properties": {
                    "coarch.maxCachedTemperature": {
                        "type": "number",
                        "default": 0.01,
                        "description": "Maximum prompt temperature to be cached (default 0.01)."
                    },
                    "coarch.maxCachedTopP": {
                        "type": "number",
                        "default": 0.5,
                        "description": "Maximum prompt top_p to be cached (default 0.5)."
                    }
                }
            }
        ],
        "commands": [
            {
                "command": "coarch.openai.token.clear",
                "shortTitle": "Clear OpenAI token",
                "title": "Clear OpenAI token in workspace secrets",
                "category": "GPTools"
            },
            {
                "command": "coarch.openai.token.update",
                "shortTitle": "Update OpenAI token",
                "title": "Update OpenAI token in workspace secrets",
                "category": "GPTools"
            },
            {
                "command": "coarch.request.abort",
                "title": "Abort OpenAI request",
                "category": "GPTools"
            },
            {
                "command": "coarch.request.retry",
                "title": "Retry last GPTool",
                "category": "GPTools"
            },
            {
                "command": "coarch.fragment.navigate",
                "title": "Navigate to fragment",
                "category": "GPTools"
            },
            {
                "command": "coarch.fragment.reveal",
                "title": "Reveal fragment in tree",
                "category": "GPTools"
            },
            {
                "command": "coarch.fragment.prompt",
                "title": "Run GPTool...",
                "category": "GPTools",
                "icon": "$(lightbulb)"
            },
            {
                "command": "coarch.prompt.navigate",
                "title": "Navigate to prompt",
                "category": "GPTools"
            },
            {
                "command": "coarch.prompt.create",
                "title": "Create new GPTool...",
                "icon": "$(add)",
                "category": "GPTools"
            },
            {
                "command": "coarch.newfile.gptool",
                "title": "GPTool File",
                "category": "GPTools"
            },
            {
                "command": "coarch.newfile.gpspec",
                "title": "GPSpec File",
                "category": "GPTools"
            },
            {
                "command": "coarch.prompt.fork",
                "title": "Fork GPTool...",
                "category": "GPTools",
                "icon": "$(repo-forked)"
            },
            {
                "command": "coarch.prompt.unbuiltin",
                "title": "Move builtin to project",
                "category": "GPTools"
            },
            {
                "command": "coarch.request.open",
                "title": "Open request or response",
                "category": "GPTools"
            },
            {
                "command": "coarch.request.open.trace",
                "title": "Open Trace",
                "category": "GPTools"
            },
            {
                "command": "coarch.request.open.output",
                "title": "Open Output",
                "category": "GPTools"
            },
            {
                "command": "coarch.request.applyEdits",
                "title": "Apply Edits",
                "category": "GPTools"
            },
            {
                "command": "coarch.request.status",
                "title": "Show information message about OpenAI request status",
                "category": "GPTools"
            },
            {
                "command": "coarch.openIssueReporter",
                "title": "Report Issue...",
                "category": "GPTools"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "yarn run compile",
        "compile:extension": "esbuild src/extension.ts --sourcemap --bundle --format=cjs --platform=node --target=node20 --outfile=built/extension.js --external:vscode",
        "compile": "yarn compile:extension",
        "lint": "eslint src --ext ts",
        "run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. ../sample",
        "typecheck": "tsc -p .",
        "prepackage": "zx prepackage.mjs",
        "postpackage": "zx postpackage.mjs",
        "package": "vsce package --dependencies --out gptools.vsix --yarn --pre-release",
        "package:insiders": "vsce package --dependencies --out gptools.insiders.vsix --yarn --pre-release"
    },
    "devDependencies": {
        "@types/isomorphic-fetch": "^0.0.39",
        "@types/mocha": "^10.0.6",
        "@types/vscode": "^1.85.0",
        "@typescript-eslint/eslint-plugin": "^6.20.0",
        "@typescript-eslint/parser": "^6.20.0",
        "@vscode/test-web": "^0.0.51",
        "@vscode/vsce": "^2.23.0",
        "assert": "^2.1.0",
        "eslint": "^8.56.0",
        "gptools-cli": "*",
        "gptools-core": "*",
        "isomorphic-fetch": "^3.0.0",
        "mocha": "^10.2.0",
        "process": "^0.11.10",
        "ts-loader": "^9.5.1",
        "typescript": "^5.3.3",
        "vscode-uri": "^3.0.8",
        "zx": "^7.2.3",
        "dotenv": "^16.4.1"
    },
    "enabledApiProposals": [
        "chatAgents2",
        "chatRequestAccess"
    ]
}
