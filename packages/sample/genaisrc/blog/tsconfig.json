{
    "compilerOptions": {
        "lib": [
            "ES2022"
        ],
        "target": "ES2023",
        "module": "NodeNext",
        "moduleDetection": "force",
        "moduleResolution": "nodenext",
        "checkJs": true,
        "allowJs": true,
        "skipLibCheck": true,
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "verbatimModuleSyntax": true,
        "resolveJsonModule": true,
        "erasableSyntaxOnly": true
    },
    "include": [
        "*.mjs",
        "*.mts",
        "src/*.mts",
        "./genaiscript.d.ts"
    ]
}